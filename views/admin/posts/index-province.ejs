<%- include("./../../includes/authMessage.ejs") %>

<div
  class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom"
></div>

<div
  class="d-flex justify-content-between align-items-center mb-3 border-bottom-1"
>
  <h2>پست ها</h2>
 
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <% let i = 1+((posts.page-1)*posts.limit) %> 
        <th>ردیف</th>
        <th>وضعیت</th>
        <th>عنوان آگهی</th>
        <th>نام استان</th>
        <th>نام شهر</th>
        <th>دسته بندی</th>
        <th>زیر دسته </th>
        <th>نمایش</th>
      </tr>
    </thead>
    <tbody>
      <% posts.docs.forEach(post => {%>
      <tr>
        <td><%=i  %> </td>
        <% i++ %> 
        <td>
            <div>
            <span class="badge badge-pill <%=post.statusForTable().color  %> "><%=post.statusForTable().message  %> </span>
        </div>
        </td>
        <td><%= post.title  %> </td>

        <td><%= post.province.name  %> </td>
        <td><%= post.city.name  %> </td>
        <td><%= post.category.title  %> </td>
        <td><%= post.subCategory.title  %> </td>

        <td>
        
            <div class="btn-group btn-group-sm">
                <a href="<%=domain%>/admin/posts/check/<%=post._id  %>" style="color:white;" role="button" class="btn  <%=post.statusForTable().color  %> ">
                    بررسی آگهی<span class="mr-2 badge badge-light"> <%=post.statusForTable().message  %>  </span>
                </a>
            </div>
        
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<%- include("./../../includes/pagination.ejs",{pagination:posts})  %> 
