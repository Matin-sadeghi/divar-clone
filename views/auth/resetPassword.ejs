

      <form
        method="POST"
        action="/users/reset-password/<%=userId%>/<%=token  %>  "
        class="login100-form validate-form"
      >
        <span class="login100-form-title"> 
            تغییر کلمه عبور
        </span>

       

        <div
          class="wrap-input100 validate-input"
          data-validate="کلمه عبور ضروری است"
        >
          <input
            class="input100"
            type="password"
            name="password"
            placeholder=" کلمه عبور جدید"
          />
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" style="margin: 10px" aria-hidden="true"></i>
          </span>
        </div>

        <div
        class="wrap-input100 validate-input"
        data-validate="تکرار کلمه عبور ضروری است"
      >
        <input
          class="input100"
          type="password"
          name="confirmPassword"
          placeholder=" تکرار کلمه عبور جدید"
        />
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-lock" style="margin: 10px" aria-hidden="true"></i>
        </span>
      </div>

        <div class="container-login100-form-btn">
          <button type="submit" class="login100-form-btn">ثبت</button>
        </div>

        <div class="text-center p-t-136">
          <a class="txt2" href="/users/register">
            ثبت نام اکانت کاربری دارم
            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
          </a>
        </div>
      </form>
    </div>
  </div>
</div>
